<% provide(:title, @board.long_name + " - SimpleCh") %>
<h1>/<%= @board.tag %>/ - <%= @board.long_name %></h1>

<div class="span8">
    <% if @board.topics.any? %>
      <ol class="threads">
        <% @board.topics.each do |topic| %>
        	<li>
			  <span class="caption"><%= wrap(topic.caption) %></span>
			  <span class="timestamp">
			    Posted <%= time_ago_in_words(topic.created_at) %> ago.
			  </span>
			</li>
        <% end %>
      </ol>
    <% end %>
</div>

